{
  "canisters": {
    "lnft_core": {
      "type": "motoko",
      "main": "src/lnft_core/main.mo",
      "optimize": "cycles",
      "gzip": true
    },
    "auth": {
      "type": "motoko",
      "main": "src/auth/main.mo",
      "optimize": "cycles",
      "gzip": true
    },
    "cronolink": {
      "type": "motoko",
      "main": "src/cronolink/main.mo",
      "optimize": "cycles",
      "gzip": true
    },
    "frontend": {
      "type": "assets",
      "source": ["src/frontend/dist"],
      "build": ["cd src/frontend && npm run build"],
      "dependencies": ["lnft_core", "auth", "cronolink"],
      "optimize": "cycles",
      "gzip": true
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": "vessel sources",
      "optimizer": {
        "level": "3",
        "warm_up_iterations": 1000
      }
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8001",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://mainnet.dfinity.network"],
      "type": "persistent"
    }
  },
  "version": 2
}